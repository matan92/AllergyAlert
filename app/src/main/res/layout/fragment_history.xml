<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/history_layout"
    android:orientation="vertical">

    <TextView
        android:id="@+id/signUp_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:visibility="gone"
        android:text="You have to sign up or login to your account in order to use this feature"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/history_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:visibility="gone"
        android:src="@drawable/ic_history" />

    <TextView
        android:id="@+id/not_scanned_yet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:visibility="gone"
        android:text="No History"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginStart="60dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/historySignUpBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#98c6f0"
            android:layout_marginStart="30dp"
            android:gravity="center"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:visibility="gone"
            android:text="Sign up"/>

        <Button
            android:id="@+id/historyLoginBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#291765"
            android:layout_marginStart="30dp"
            android:visibility="gone"
            android:gravity="center"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:text="Login"/>

        <ProgressBar
            android:id="@+id/hpb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="10dp"
            android:visibility="invisible"/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/hrv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="4dp"
        android:scrollbars="vertical" />





</LinearLayout>