<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp">


        <TextView
            android:id="@+id/username_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:padding="2dp"
            android:text="Line 1" />

        <RatingBar
            android:id="@+id/ratingbar_view"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="23dp"
            android:layout_marginTop="-6dp"
            android:isIndicator="true"
            android:layout_toEndOf="@+id/username_view" />

        <TextView
            android:id="@+id/date_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ratingbar_view"
            android:layout_marginStart="-230dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@+id/ratingbar_view"
            android:text="Line 2"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/productName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/date_view"
            android:layout_marginStart="-79dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/date_view"
            android:text="Line 3"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/feedback_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/date_view"
            android:layout_marginStart="-77dp"
            android:layout_marginTop="29dp"
            android:layout_toEndOf="@id/date_view"
            android:text="Line 4" />

    </RelativeLayout>


</androidx.cardview.widget.CardView>