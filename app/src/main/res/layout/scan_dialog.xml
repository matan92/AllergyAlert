<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:layoutDirection="rtl">

    <ImageView
        android:id="@+id/scan_clear_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:src="@drawable/ic_clear"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Choose your allergies"
        android:textColor="@android:color/black"
        android:textSize="20sp"/>

    <ListView
        android:id="@+id/scanning_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clickable="true"
        android:layout_weight="1">
    </ListView>

    <TextView
        android:id="@+id/new_allergy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Can't find your allergy? Click to add"/>

    <Button
        android:id="@+id/scanning_btn"
        android:layout_width="141dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/rounded_button"
        android:onClick="save_list"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
        android:text="Proceed"
        android:textColor="@android:color/white"
        android:textAllCaps="false"/>

</LinearLayout>